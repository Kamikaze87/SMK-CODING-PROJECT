<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biodata App"
            android:fontFamily="arial"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"

        />

    <EditText
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/corner_edit"
        android:hint="Masukan Nama"
        android:inputType="textPersonName"
        android:padding="7dp" />

    <Spinner
        android:id="@+id/jeniskelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#434243"
        android:layout_margin="16dp"
        android:padding="7dp"
        android:layout_marginTop="35dp"
        android:entries="@array/Gender" />

    <EditText
        android:id="@+id/age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Masukan Umur"
        android:inputType="number"
        android:lines="1"
        android:padding="7dp"
        android:background="@drawable/corner_edit"
        android:maxLines="1" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Masukan Alamat E-mail"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:padding="10dp"
        android:background="@drawable/corner_edit"
        android:maxLines="1" />

    <EditText
        android:id="@+id/nomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Masukan Nomor Telepon"
        android:inputType="phone"
        android:lines="1"
        android:background="@drawable/corner_edit"
        android:padding="7dp"
        android:maxLines="1" />


    <EditText
        android:id="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/corner_edit"
        android:hint="Masukan Alamat"
        android:padding="7dp"
        android:inputType="textMultiLine"
        />

    <Button
        android:id="@+id/save_btn"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/corner_btn"
        android:text="SIMPAN" />

    <Button
        android:id="@+id/abotbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="7dp"
        android:background="@drawable/corner2_btn"
        android:text="About Me" />


</LinearLayout>
</ScrollView>